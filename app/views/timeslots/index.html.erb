<h1>Available times</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @timeslots.each do |timeslot| %>
      <tr>
        <td><%= timeslot.viewing_date %></td>
        <td><%= timeslot.start_time.strftime("%-I:%M %p") %></td>
        <td><%= timeslot.end_time.strftime("%-I:%M %p") %></td>
        <td><%= timeslot.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>